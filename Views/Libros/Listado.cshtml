@model List<DirectorioLibros.Models.Libro>

@{
    ViewData["Title"] = "Listado de Libros";
}

<h2>Listado de Libros</h2>
<a href="/Libros/Crear">Agregar Nuevo Libro</a>
<table border="1" cellpadding="5">
    <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Año de Publicación</th>
        <th>Acciones</th>
    </tr>
    @foreach (var libro in Model)
    {
        <tr>
            <td>@libro.Titulo</td>
            <td>@libro.Autor</td>
            <td>@libro.AnoPublicacion</td>
            <td>
                <a href="/Libros/Detalles/@libro.Id">Ver Detalles</a> |
                <a href="/Libros/Eliminar/@libro.Id">Eliminar</a>
            </td>
        </tr>
    }
</table>